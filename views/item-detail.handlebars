<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 pt-5 text-center align-self-center">
            <div>
                <img src="/images/{{item.image}}" class="img-responsive" style="width:100%" alt="{{item.name}}">
            </div>
            <br>
            <div>
                <p>Rental Price : ${{item.rental_price}}</p>
                {{!-- <p>Rental Period: Per Day</p> --}}
                <p>Buy Price: ${{item.buy_price}}</p>
            </div>
            <div>
                <button type="click" id="rentBtn" data-attr="{{item.id}}" class="btn btn-danger">Rent Now</button>
                <button type="click" id="buyBtn" data-attr="{{item.id}}" class="btn btn-danger">Buy Now</button>
            </div>

        </div>
    
       
        <div class="col-lg-6 col-md-6 col-sm-12 calign-self-center pt-5">
            <div class="row justify-content-center ">
                <h3 style="letter-spacing: 1px;">{{item.name}}</h3>
                <p>Rating: <span class="rating_bar">{{item.rating}}</span></p>
            </div>
            <br>
            <div class="jumbotron" style="background: transparent;">
                <p style="font-size: 20px;">
                {{item.description}}
                </p>
            </div>
            
        </div>
    </div>
</div>
<br>
<div class="container">
    <h4>Reviews</h4>
    <div class="row">
        {{#each reviews as |reviews|}}
        <div class="card col-12">
            <div class="card-body">
            <h5><strong>{{reviews.user.first_name}} {{reviews.user.last_name}}</strong></h5>
            <p>Rating: <span class="rating_bar">{{reviews.rating}}</span>  </p>
            <p>{{reviews.body }}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<hr>
<h3 class="row justify-content-center"> Related Items</h3>

<br>

<div class="row">
    <div class="col-12 m-auto" >
        <div class="owl-carousel owl-theme">
            {{#each categoryItem as |item|}}
            <a class="link-style" href="/item/{{item.id}}">
                <div class="item mb-4 item-border" >
                    <div class="card border-0 shadow carousel-card"  >
                        <div class="itemImaCard">
                        <img src="/images/{{item.image}}" alt="{{itme.name}}" class="card-img-top img-carousel" >
                        </div>
                        <div class="card-body rounded-bottom"style="background-color: rgba(168,9,9,0.993);">
                            <div class="card-title text-center text-light">
                                <h4 id="carouselitem-name" class="item-name" >{{item.name}}</h4>
                                <h5 id="carouselitem-price" class="item-price">${{item.rental_price}}/Per Day</h5>
                                <h6 id="carouselitem-buyprice"  class="item-price">Buy now for ${{item.buy_price}}</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</div>


<script src="/js/rating.js"></script>
<script src="/js/item-detail.js"></script>

